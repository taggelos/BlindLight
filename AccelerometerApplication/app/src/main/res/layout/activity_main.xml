<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@drawable/wallpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aggel.accelerometerapplication.HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:text="@string/cm"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:id="@+id/cm"
        android:layout_alignBaseline="@+id/Proximity"
        android:layout_alignBottom="@+id/Proximity"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/m_s2"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m_sec2"
        android:layout_alignBaseline="@+id/zText"
        android:layout_alignBottom="@+id/zText"
        android:layout_alignParentEnd="true"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Z"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:id="@+id/zText"
        android:layout_alignBaseline="@+id/yText"
        android:layout_alignBottom="@+id/yText"
        android:layout_toEndOf="@+id/yText"
        android:layout_marginStart="24dp" />

    <TextView
        android:text="@string/Y"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yText"
        android:layout_alignBaseline="@+id/xText"
        android:layout_alignBottom="@+id/xText"
        android:layout_toEndOf="@+id/xText"
        android:layout_marginStart="19dp" />

    <TextView
        android:text="@string/Accelerometer"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Accelerometer"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/Proximity"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/Proximity"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Proximity"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/Light"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/X"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xText"
        android:layout_alignBaseline="@+id/Accelerometer"
        android:layout_alignBottom="@+id/Accelerometer"
        android:layout_toEndOf="@+id/Accelerometer"
        android:layout_marginStart="30dp" />

    <TextView
        android:text="@string/light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Light"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_marginStart="13dp"
        android:layout_alignBaseline="@+id/sensText"
        android:layout_alignBottom="@+id/sensText"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/Sensors"
        android:textSize="35sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:id="@+id/readyApp"
        tools:textAlignment="center"
        android:textCursorDrawable="@color/colorAccent"
        android:textColorHighlight="@color/colorAccent"
        tools:ignore="UnknownIdInLayout"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/lightsensText"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sensText"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/readyApp"
        android:layout_toStartOf="@+id/m_sec2"
        android:layout_marginEnd="52dp" />

    <TextView
        android:text="@string/proxText"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/proxText"
        android:layout_alignBaseline="@+id/Proximity"
        android:layout_alignBottom="@+id/Proximity"
        android:layout_alignStart="@+id/zText" />


</RelativeLayout>
