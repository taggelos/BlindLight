<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:label="@string/Settings"
    android:fillViewport="true"
    tools:context="com.example.aggel.accelerometerapplication.SettingsActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="710dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/NumberPickerLightMax">

        <TextView
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:id="@+id/LightTextViewMax"
            android:text="Select Max Threshold" />

        <NumberPicker
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:id="@+id/LightMaxNumberPicker" />

        <TextView
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:id="@+id/LightTextViewMin"
            android:text="Select Min Threshold" />

        <NumberPicker
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:id="@+id/LightMinNumberPicker" />

        <TextView
            android:text="@string/seekbarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekbarView"
            android:layout_below="@+id/button"
            android:layout_alignParentStart="true" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:max="10"
            android:progress="3"
            android:layout_below="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_marginTop="37dp" />

        <TextView
            android:text="@string/y_axis_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar"
            android:layout_alignParentStart="true"
            android:layout_marginTop="51dp"
            android:id="@+id/seekbarView2" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekbarView2"
            android:layout_marginTop="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:id="@+id/seekBar2"
            android:max="10"
            android:progress="7"
            tools:ignore="ObsoleteLayoutParam" />

        <TextView
            android:text="@string/z_axis_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar2"
            android:layout_marginTop="59dp"
            android:id="@+id/seekbarView3" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekbarView3"
            android:layout_marginTop="51dp"
            android:id="@+id/seekBar3"
            android:layout_alignParentStart="true"
            android:max="10"
            android:progress="8" />


        <Button
            android:text="@string/testSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            tools:ignore="RelativeOverlap" />

        <Button
            android:text="@string/save_changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSave" />


    </LinearLayout>


</ScrollView>
